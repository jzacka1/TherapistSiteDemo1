            @Html.AntiForgeryToken()

            <label>Your Name (required)</label>
            <br />
            <label>Subject</label>
            <br />
            @*@Html.TextBox("name")*@
            @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @required = "required" })
            <br /><br />
            <label>Phone</label>
            <br />
            @*@Html.TextBox("subject")*@
            @Html.TextBoxFor(x => x.Phone, htmlAttributes: new { @required = "required" })
            <br /><br />
            @*@Html.TextBox("email")*@
            <label>Your Email (required)</label>
            <br />
            @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "contactEmail", @required = "required" })
            <br /><br />
            <label>Subject</label>
            <br />
            @*@Html.TextBox("subject")*@
            @Html.TextBoxFor(x => x.Subject, htmlAttributes: new { @required = "required" })
            <br /><br />
            <label>Your Message</label>
            <br />
            @*@Html.TextArea("messageBox")*@
            @Html.TextAreaFor(x => x.Message, htmlAttributes: new { @rows = "5", cols = "100", @required = "required" })
            <br />
            <input id="sendBtn" type="submit" value="Send" onclick="" />
        </div>
    }

</div>